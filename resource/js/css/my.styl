table tr > th.sorting, table tr > th.sorting_desc
  position relative
  padding-right 25px !important

table tr > th.sorting:after, table tr > th.sorting:before, table tr > th.sorting_desc:after, table tr > th.sorting_desc:before
  content ''
  position absolute
  width 0
  height 0
  display block
  top 0
  bottom 0
  right 6px
  margin auto
  cursor pointer

table tr > th.sorting:after, table tr > th.sorting_desc:after
  top 18px
  border-top 6px solid rgba(255, 255, 255, 0.5)
  border-left 5px solid transparent
  border-right 5px solid transparent
  border-bottom 6px solid transparent

table tr > th.sorting:before, table tr > th.sorting_desc:before
  top -13px
  border-bottom 6px solid rgba(255, 255, 255, 0.5)
  border-left 5px solid transparent
  border-right 5px solid transparent
  border-top 6px solid transparent

table tr > th.sorting_asc:after
  border-top 6px solid hsla(0, 0%, 100%, 0.9)

table tr > th.sorting_desc:before
  border-bottom 6px solid hsla(0, 0%, 100%, 0.9)

